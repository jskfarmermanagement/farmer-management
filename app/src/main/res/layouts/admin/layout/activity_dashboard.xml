<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".admin.DashboardActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/btn_add_crops"
        android:textColor="@android:color/white"
        android:text="@string/btn_add_crops"
        android:layout_marginVertical="15dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/btn_add_agency"
        android:textColor="@android:color/white"
        android:text="@string/btn_add_agency"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/btn_add_centre"
        android:textColor="@android:color/white"
        android:text="@string/btn_add_centre"/>

</LinearLayout>